{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "types": ["jest"]
  },
  "ts-node": {
    "files": true,
  },
  "exclude": ["node_modules", "public", ".cache", "**/*.test.ts", "**/*.test.tsx"],
  "include": ["**/*.ts", "**/*.tsx"]
}
